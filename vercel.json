{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "cd .. && pnpm --filter shared build && cd frontend && pnpm build"
      }
    },
    {
      "src": "backend/api/index.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd .. && pnpm --filter shared build && pnpm --filter backend build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "postgresql://neondb_owner:npg_29MPOFGkwqRp@ep-lingering-breeze-a1o4fvxe-pooler.ap-southeast-1.aws.neon.tech/neondb?sslmode=require",
    "NEXT_PUBLIC_API_URL": "/api"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "/api"
    }
  }
}